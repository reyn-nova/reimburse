generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int     @id @default(autoincrement())
  name String
  password String
  role String
  nominal_alokasi Int
}

model Reimburse {
  id_reimburse Int     @id @default(autoincrement())
  keterangan String
  id_user Int
  judul String
  bukti_foto String
  tanggal String
}

model ReviewReimburse {
  id_review_reimburse Int @id @default(autoincrement())
  id_reimburse Int
  id_reviewer Int
  komentar String
  status_persetujuan String
}
